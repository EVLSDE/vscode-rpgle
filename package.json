{
	"name": "vscode-rpgle",
	"displayName": "RPGLE language tools",
	"description": "RPGLE content assist and linter for VS Code",
	"author": {
		"name": "Halcyon Tech Ltd",
		"url": "https://github.com/halcyon-tech"
	},
	"icon": "./media/logo.png",
	"publisher": "halcyontechltd",
	"repository": {
		"url": "https://github.com/halcyon-tech/vscode-rpgle"
	},
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:rpgle"
	],
	"extensionDependencies": [
		"HalcyonTechLtd.code-for-ibmi"
	],
	"main": "./dist/extension",
	"contributes": {
		"snippets": [
			{
				"path": "./snippets/rpgle.code-snippets",
				"language": "rpgle"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": [
					"rpglint.json",
					"RPGLINT.JSON"
				],
				"url": "./src/schemas/rpglint.json"
			}
		],
		"commands": [
			{
				"command": "vscode-rpgle.openLintConfig",
				"title": "Open RPGLE lint configuration",
				"category": "RPGLE"
			},
			{
				"command": "vscode-rpgle.rpgleColumnAssistant",
				"title": "Launch Column Assistant",
				"category": "RPGLE"
			},
			{
				"command": "vscode-rpgle.rpgleOpenInclude",
				"title": "Open include at cursor",
				"category": "RPGLE"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "vscode-rpgle.rpgleColumnAssistant",
					"group": "1_rpgle",
					"when": "editorLangId == rpgle"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-rpgle.openLintConfig",
					"when": "view == objectBrowser && viewItem == filter",
					"group": "1_LibActions@2"
				}
			]
		},
		"keybindings": [
			{
				"command": "vscode-rpgle.rpgleOpenInclude",
				"key": "shift+f12",
				"mac": "shift+f12",
				"when": "editorLangId == rpgle"
			},
			{
				"command": "vscode-rpgle.rpgleColumnAssistant",
				"key": "shift+f4",
				"mac": "shift+f4",
				"when": "editorLangId == rpgle"
			}
		],
		"configuration": {
			"title": "RPGLE language tools",
			"properties": {
				"vscode-rpgle.rpgleLinterSupportEnabled": {
					"type": "boolean",
					"default": false,
					"description": "Experimental feature. When enabled, will provide warnings for RPGLE sources. Supports total free RPG only."
				},
				"vscode-rpgle.rpgleContentAssistEnabled": {
					"type": "boolean",
					"default": false,
					"description": "Experimental feature. When enabled, will provide content assist for procedures inside of your RPG sources. Supports total free RPG only."
				},
				"vscode-rpgle.rpgleColumnAssistEnabled": {
					"type": "boolean",
					"default": false,
					"description": "Experimental feature. When enabled, will provide column assist for writing fixed format RPGLE (RPG3 and RPGIV)."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"package": "vsce package",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.24.3",
		"webpack-cli": "^4.5.0"
	},
	"dependencies": {
		"tmp": "^0.2.1"
	}
}