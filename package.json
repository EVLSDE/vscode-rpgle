{
	"name": "vscode-rpgle",
	"displayName": "RPGLE language tools",
	"description": "RPGLE content assist and linter for VS Code",
	"author": {
		"name": "Halcyon Tech Ltd",
		"url": "https://github.com/halcyon-tech"
	},
	"icon": "media/logo.png",
	"publisher": "halcyontechltd",
	"repository": {
		"url": "https://github.com/halcyon-tech/vscode-rpgle"
	},
	"version": "0.13.0",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:rpgle"
	],
	"main": "./client/out/extension",
	"contributes": {
		"snippets": [
			{
				"path": "./snippets/rpgle.code-snippets",
				"language": "rpgle"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": [
					"rpglint.json",
					"RPGLINT.JSON"
				],
				"url": "./src/schemas/rpglint.json"
			}
		],
		"commands": [],
		"menus": {
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4"
	}
}
